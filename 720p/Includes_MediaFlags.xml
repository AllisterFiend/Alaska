<!--Alaska-->

<includes>
	<include name="PosterMediaFlagsVars">
		<posy>530</posy>
		<height>35</height>
		<colordiffuse>FlagDiffuse</colordiffuse>
	</include>

	<include name="PosterMediaFlagsVars2">
		<posx>55</posx>
		<posy>527</posy>
		<width>60</width>
		<height>40</height>
		<colordiffuse>FlagDiffuse</colordiffuse>
	</include>

	<include name="PosterMediaFlags">
		<control type="group">
			<include>Animation_SlideUpFadeOut</include>
			<include>Animation_HiddenByInfo</include>
			<posx>58</posx>
			<posy>0</posy>
			<width>350</width>
			<animation effect="slide" start="0,0" end="0,20" condition="Control.IsVisible(51)">Conditional</animation>
			<animation effect="slide" start="0,0" end="-341,40" condition="Control.IsVisible(52)">Conditional</animation>
			<animation effect="slide" start="0,0" end="0,50" condition="Control.IsVisible(55)">Conditional</animation>
			<animation effect="slide" start="0,0" end="-340,30" condition="Control.IsVisible(56)">Conditional</animation>
			<visible>Skin.HasSetting(mediaflagson) + [Container.Content(movies) | Container.Content(episodes)]</visible>

			<!-- Studio Panel -->

			<!--control type="group">
				<posx>785</posx>
				<posy>0</posy>
				<control type="image">
					<width>88</width>
					<height>59</height>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/default.png</texture>
					<visible>!Control.IsVisible(81) + !Skin.HasSetting(nodefaultflags) + Skin.HasSetting(showstudioflags)</visible>
				</control>
				<control type="image" id="81">
					<width>88</width>
					<height>59</height>
					<include>PosterMediaFlagsVars</include>
					<texture fallback="flags/default.png">$INFO[Listitem.studio,extras/studios/,.png]</texture>
					<visible>Skin.HasSetting(showstudioflags)</visible>
				</control>
			</control-->

			<!-- Rating Panel -->

			<control type="group">
				<description>IMDB rating</description>
				<posx>785</posx>
				<posy>0</posy>
				<visible>!Skin.HasSetting(noratingpanel)</visible>
				<control type="image">
					<width>88</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/Rating/IMDB.png</texture>
				</control>
				<control type="label">
					<label fallback="?">$INFO[ListItem.rating]</label>
					<posx>30</posx>
					<posy>525</posy>
					<width>56</width>
					<height>45</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>Font_PosterRating</font>
					<colordiffuse>FlagDiffuse</colordiffuse>
				</control>
			</control>

			<!-- Video Panel -->

			<control type="group">
				<posx>888</posx>
				<visible>!Skin.HasSetting(novideopanel)</visible>
				<control type="image">
					<width>161</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/AspectRatio/frame.png</texture>
				</control>
				<control type="label">
					<label fallback="?">$INFO[ListItem.VideoResolution]</label>
					<posx>3</posx>
					<posy>525</posy>
					<width>50</width>
					<height>45</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>Font_Res</font>
					<textcolor>FlagText</textcolor>
				</control>
				<control type="label">
					<label fallback="?">$INFO[ListItem.VideoAspect]</label>
					<posx>120</posx>
					<posy>525</posy>
					<width>35</width>
					<height>45</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>Font_Aspect</font>
					<textcolor>FlagText</textcolor>
				</control>
				<control type="image">
					<include>PosterMediaFlagsVars2</include>
					<texture fallback="flags/default.png">$INFO[Listitem.VideoCodec,flags/VideoCodec/,.png]</texture>
					<visible>!substring(listitem.filename,hdtv) + !substring(listitem.filename,dvd) + !substring(listitem.filename,bluray) + !substring(listitem.filename,blu-ray) + !substring(listitem.filename,bdrip) + !substring(listitem.filename,.iso,Right) + !substring(listitem.filename,.ifo,Right)</visible>
				</control>
				<control type="image">
					<include>PosterMediaFlagsVars2</include>
					<texture>flags/Source/hdtv.png</texture>
					<visible>substring(listitem.filename,hdtv)</visible>
				</control>
				<control type="image">
					<include>PosterMediaFlagsVars2</include>
					<texture>flags/Source/hddvd.png</texture>
					<visible>substring(listitem.filename,hddvd) | substring(listitem.filename,hd-dvd)</visible>
				</control>
				<control type="image">
					<include>PosterMediaFlagsVars2</include>
					<texture>flags/Source/bluray.png</texture>
					<visible>substring(listitem.filename,bluray) | substring(listitem.filename,blu-ray) | substring(listitem.filename,bdrip)</visible>
				</control>
				<control type="image">
					<include>PosterMediaFlagsVars2</include>
					<texture>flags/Source/dvd.png</texture>
					<visible>[substring(listitem.filename,dvd) + !substring(listitem.filename,hddvd) + !substring(listitem.filename,hd-dvd) + !substring(listitem.filename,bluray)] | [substring(listitem.filename,.iso,Right) + !substring(listitem.filename,bluray)] | substring(listitem.filename,.ifo,Right)</visible>
				</control>
			</control>

			<!-- Audio Panel -->

			<control type="group">
				<posx>1064</posx>
				<visible>!Skin.HasSetting(noaudiopanel)</visible>
				<control type="image">
					<width>100</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/AudioCodec/frame.png</texture>
				</control>
				<control type="label">
					<label fallback="?">$INFO[ListItem.AudioChannels,,.0]</label>
					<posx>3</posx>
					<posy>525</posy>
					<width>33</width>
					<height>45</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>Font_Channels</font>
					<textcolor>FlagText</textcolor>
					<visible>!IsEmpty(ListItem.AudioChannels) + !substring(ListItem.AudioChannels,6) + !substring(ListItem.AudioChannels,8)</visible>
				</control>
				<control type="label">
					<label>5.1</label>
					<posx>3</posx>
					<posy>525</posy>
					<width>33</width>
					<height>45</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>Font_Channels</font>
					<textcolor>FlagText</textcolor>
					<visible>!IsEmpty(ListItem.AudioChannels) + substring(ListItem.AudioChannels,6)</visible>
				</control>
				<control type="label">
					<label>7.1</label>
					<posx>3</posx>
					<posy>525</posy>
					<width>33</width>
					<height>45</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>Font_Channels</font>
					<textcolor>FlagText</textcolor>
					<visible>!IsEmpty(ListItem.AudioChannels) + substring(ListItem.AudioChannels,8)</visible>
				</control>
				<control type="image">
					<posx>35</posx>
					<posy>530</posy>
					<width>60</width>
					<height>40</height>
					<colordiffuse>FlagDiffuse</colordiffuse>
					<texture fallback="flags/default.png">$INFO[Listitem.AudioCodec,flags/AudioCodec/,.png]</texture>
					<visible>!IsEmpty(ListItem.AudioCodec)</visible>
				</control>
			</control>
		</control>
	</include>
</includes>